<!-- We add the header -->
<%- include("../partials/header") %>

<div class="container">

<header class="jumbotron"> 
	<div class="container">
		<h2> Welcome to the Campgrounds Page </h2>
        <p> View the best campgrounds from all around the world </p>
        <p> <a class="btn btn-primary btn-lg" href="/campgrounds/new"> Add New Campground </a> </p>	
	</div>
</header>

<!-- This adds new campgrounds from our form -->
<div class="row text-center" style="display:flex; flex-wrap: wrap;"> 
	    
    <% campgrounds.forEach((campground) => { %>
        <div class="col-md-3 col-sm-6"> 
			<div class="thumbnail">
				<img src="<%= campground.image %>">
				<div class="caption">
					<h4> <%= campground.name %> </h4>
				</div>
				
				<p>
					<a href="/campgrounds/<%= campground._id %>" class="btn btn-primary"> More info </a>
				</p>
				
				
			</div>
    	</div>
    <% }) %>
	
</div>

<!-- This is the footer -->
<%- include("../partials/footer") %>
	
</div>